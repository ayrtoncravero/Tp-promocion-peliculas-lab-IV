@model Tp_promoción_peliculas_cravero.Models.Person

@{
    ViewData["Title"] = "Create - actor";
}

<h1>Crear actor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" asp-controller="People" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="control-label"></label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                @*<input asp-for="Biography" class="form-control" />*@
                <textarea asp-for="Biography" class="form-control" rows="4" maxlength="200" minlength="1"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Photo" class="control-label"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label>Foto del actor</label>
                <input asp-for="Photo" type="file" id="selectionImg" class="form-control" />
                <img id="image" src="" alt="Imagen seleccionada" height="80" width="80" />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js//images.js"></script>
